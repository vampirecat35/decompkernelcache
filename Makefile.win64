##
#
# AnV LZVN/LZSS kernel cache decompressor V1.0
#
# Intel 64-bit (WIN64) version
#
##

PREFIX=/usr
LIBPREFIX=WINSUP64

NASM=nasm
CC=gcc -I$(LIBPREFIX)/include
YACC=bison -y
WINDRES=windres
AR=ar
RANLIB=ranlib
LIBS=-L. -llzvn -L"$(LIBPREFIX)/lib" -lCoreFoundation
INSTALL=install
ARFLAGS=cru
CFLAGS=-Os
ASFLAGS=$(CFLAGS)

all: decompkernelcache.exe decompkernelcache-kc.exe

# .asm.o:
#	$(NASM) -o $@ -f macho64 $<

# .s.o:
#	$(CC) $(ASFLAGS) -c $< -o $@

# .S.o:
#	$(CC) $(ASFLAGS) -c $< -o $@

.c.o:
	$(CC) $(CFLAGS) -c $< -o $@

# IOCFUnserialize.c: IOCFUnserialize.yacc
#	$(YACC) -o $@ $<

decompkernelcacheres.o: decompkernelcache.rc
	$(WINDRES) -o $@ $<

lzvndec.o: lzvndec.c
lzvn_encode.o: lzvn_encode.c
WINSUPSRC/IOCFUnserialize.o: WINSUPSRC/IOCFUnserialize.c

liblzvn.a: lzvndec.o lzvn_encode.o
	$(AR) $(ARFLAGS) $@ $^
	$(RANLIB) liblzvn.a

decompkernelcache.exe: decompkernelcache.o decompkernelcacheres.o WINSUPSRC/IOCFUnserialize.o liblzvn.a
	$(CC) $(CFLAGS) -o $@ decompkernelcache.o decompkernelcacheres.o WINSUPSRC/IOCFUnserialize.o $(LIBS)

decompkernelcache-kc.exe: decompkernelcache-kc.o decompkernelcacheres.o WINSUPSRC/IOCFUnserialize.o liblzvn.a
	$(CC) $(CFLAGS) -o $@ decompkernelcache-kc.o decompkernelcacheres.o WINSUPSRC/IOCFUnserialize.o $(LIBS)

clean:
	rm -f *.o WINSUPSRC/IOCFUnserialize.o liblzvn.a decompkernelcache.exe decompkernelcache-kc.exe

install: decompkernelcache.exe decompkernelcache-kc.exe lzvn.h liblzvn.a
	$(INSTALL) decompkernelcache.exe $(PREFIX)/bin
	$(INSTALL) decompkernelcache-kc.exe $(PREFIX)/bin
	$(INSTALL) liblzvn.a $(PREFIX)/lib
	$(INSTALL) lzvn.h $(PREFIX)/include
